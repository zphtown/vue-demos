.preview-detail{
  position: fixed
  z-index: 100
  top: 0
  left: 0
  bottom: 0
  right: 0
  padding: 30px;
  background: #fff;
  .banner{
    width: 100%;
    border-radius: 30px;
    margin-bottom: 30px;
    box-shadow: 0 0 10px #e4e4e4;
  }
  .party-title{
    font-weight: 600;
    margin-bottom: 20px;
  }
  .content{
    margin-bottom 100px;
    .party-brief{
      font-size: 25px;
      color: rgba(0, 0, 0, 0.5);
      margin-bottom: 20px;
    }
    .party-item{
      flex-between()
      align-items: center;
      margin-bottom: 5px;
      color: rgba(0, 0, 0, 0.5);
      font-size: 30px;
    }
    .detail{
      font-size: 25px;
      width: 84px;
      height: 40px;
      background-color: #e51c23;
      border-radius: 5px;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .refound{
      font-size: 25px;
      width: 84px;
      height: 40px;
      background-color: #33a546;
      border-radius: 5px;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .time{
      display: flex;
      flex-direction: row;
      align-items: center;
      font-size: 30px;
      color: rgba(0, 0, 0, 0.9);
      margin-bottom: 10px;
      margin-top: 30px;
    }
    .time-icon{
      width: 40px;
      height: 40px;
      margin-right: 10px;
      bg-image('location-party-time')
    }
    .location{
      display: flex;
      flex-direction: row;
      align-items: stretch;
      font-size: 30px;
      color: rgba(0, 0, 0, 0.9);
    }
    .location-icon{
      width: 40px;
      height: 40px;
      margin-right: 10px;
      bg-image('location-party-detail-icon')
    }
  }

  .footer {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 100;
    height: 100px;
    width: 100%;
    color: #fff;
    font-size: 40px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgb(211, 211, 211);
  }

  .applying {
    background-image: linear-gradient(270deg, #f75b3b 0%, #fb0757 100%);
  }
}
